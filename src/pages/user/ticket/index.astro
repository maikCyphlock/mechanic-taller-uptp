---
import Layout from "@/layout/layout.astro";
import SubmitTicket from './submit.svelte'

const isEmailVerified = Astro.locals.user.emailVerified;
---

<Layout>
	{
		isEmailVerified ? (
			<SubmitTicket />
		) : (
		
				<main class="min-h-screen flex flex-col items-center justify-center bg-gradient-to-b from-blue-50 to-white p-4">
					<div class="max-w-md w-full bg-white rounded-xl shadow-lg p-8 text-center">
						<div class="mb-6">
							<svg
								class="mx-auto h-16 w-16 text-blue-500"
								fill="none"
								viewBox="0 0 24 24"
								stroke="currentColor"
							>
								<path
									stroke-linecap="round"
									stroke-linejoin="round"
									stroke-width="2"
									d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
								/>
							</svg>
						</div>
						<h1 class="text-2xl font-bold text-gray-800 mb-3">
							Verificación Pendiente
						</h1>
						<p class="text-gray-600 mb-6">
							Tu cuenta está en proceso de verificación. Un
							administrador revisará tu solicitud y te notificará
							cuando tu cuenta haya sido activada.
						</p>
						<p class="text-sm text-gray-500 bg-blue-50 rounded-lg p-3">
							¿Tienes alguna duda? <br class="sm:hidden" />
							<span class="font-medium text-blue-600">
								Contacta con el administrador
							</span>{" "}
							para más información.
						</p>
					</div>
				</main>
	
		)
	}
</Layout>
